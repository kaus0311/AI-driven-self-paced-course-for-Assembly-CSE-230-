# Enable RewriteEngine
RewriteEngine On

# DO NOT rewrite requests for _next static files (JS, CSS, fonts, images)
RewriteRule ^_next/static/.* - [L]
RewriteRule ^_next/.* - [L]

# DO NOT rewrite requests for actual files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Handle Clean URLs - add .html extension if file exists
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Handle directory index
RewriteCond %{REQUEST_FILENAME}/index.html -f
RewriteRule ^(.*)$ $1/index.html [L]

# Custom 404 page
ErrorDocument 404 /404.html

# Proper MIME types for static files
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType font/woff2 .woff2
    AddType image/svg+xml .svg
    AddType image/x-icon .ico
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>
